{% comment %}
  Latest Adventures - YouTube Video Section
  Compatible with Shopify Horizon Theme
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} latest-adventures color-{{ section.settings.color_scheme }}"
  style="
    --padding-block-start: {{ section.settings.padding_block_start }}px;
    --padding-block-end: {{ section.settings.padding_block_end }}px;
  "
>
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.youtube_url != blank -%}
      <div class="section-header">
        {%- if section.settings.heading != blank -%}
          <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.youtube_url != blank -%}
          <a href="{{ section.settings.youtube_url }}" class="view-all-link" target="_blank" rel="noopener">
            View All on YouTube
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M6 12l4-4-4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="video-grid">
        {%- for block in section.blocks -%}
          <a href="{{ block.settings.video_url }}" class="video-card" target="_blank" rel="noopener" {{ block.shopify_attributes }}>
            <div class="video-thumbnail">
              {%- if block.settings.thumbnail != blank -%}
                {{ block.settings.thumbnail | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
              {%- else -%}
                <div class="video-thumbnail-placeholder">
                  <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
                    <circle cx="32" cy="32" r="32" fill="rgba(0,0,0,0.1)"/>
                    <path d="M26 20l18 12-18 12V20z" fill="rgba(0,0,0,0.5)"/>
                  </svg>
                </div>
              {%- endif -%}
              <div class="play-overlay">
                <svg width="48" height="48" viewBox="0 0 48 48" fill="white">
                  <circle cx="24" cy="24" r="24" fill="rgba(0,0,0,0.7)"/>
                  <path d="M19 14l14 10-14 10V14z" fill="white"/>
                </svg>
              </div>
            </div>
            <div class="video-info">
              <h3 class="video-title">{{ block.settings.title }}</h3>
              <p class="video-meta">ShujaaKing • {{ block.settings.views }} • {{ block.settings.time_ago }}</p>
            </div>
          </a>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="placeholder-content">
        <p>Add video blocks to display your latest YouTube adventures.</p>
      </div>
    {%- endif -%}
  </div>
</div>

{% stylesheet %}
  .latest-adventures {
    padding-block-start: var(--padding-block-start);
    padding-block-end: var(--padding-block-end);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    gap: 20px;
  }

  .section-heading {
    font-size: 32px;
    font-weight: 700;
    margin: 0;
  }

  .view-all-link {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .view-all-link:hover {
    opacity: 0.8;
  }

  .video-grid {
    display: flex;
    gap: 24px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding-bottom: 16px;
    -webkit-overflow-scrolling: touch;
  }

  .video-grid::-webkit-scrollbar {
    height: 8px;
  }

  .video-grid::-webkit-scrollbar-track {
    background: rgb(var(--color-border) / 0.1);
    border-radius: 4px;
  }

  .video-grid::-webkit-scrollbar-thumb {
    background: var(--color-primary);
    border-radius: 4px;
  }

  .video-card {
    flex: 0 0 300px;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    border-radius: 8px;
    overflow: hidden;
  }

  .video-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .video-thumbnail {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: rgb(var(--color-border) / 0.1);
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .video-card:hover .video-thumbnail img {
    transform: scale(1.05);
  }

  .video-thumbnail-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .play-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.9;
    transition: opacity 0.2s;
  }

  .video-card:hover .play-overlay {
    opacity: 1;
  }

  .video-info {
    padding: 16px 12px;
  }

  .video-title {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: var(--color-foreground-heading);
  }

  .video-meta {
    font-size: 14px;
    color: rgb(var(--color-foreground) / 0.7);
    margin: 0;
  }

  .placeholder-content {
    text-align: center;
    padding: 60px 20px;
    color: rgb(var(--color-foreground) / 0.6);
  }

  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .video-card {
      flex: 0 0 85vw;
    }

    .video-grid {
      gap: 16px;
      scroll-snap-type: x mandatory;
    }

    .video-card {
      scroll-snap-align: start;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Latest Adventures",
  "class": "section-latest-adventures",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest Adventures"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube Channel URL",
      "default": "https://youtube.com/@shujaaking"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        },
        {
          "value": "scheme-2",
          "label": "Scheme 2"
        },
        {
          "value": "scheme-3",
          "label": "Scheme 3"
        }
      ],
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page width"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "padding_block_start",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_block_end",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Video Title",
          "default": "Adventure Video Title"
        },
        {
          "type": "text",
          "id": "video_url",
          "label": "YouTube Video URL",
          "info": "Full URL to the YouTube video"
        },
        {
          "type": "image_picker",
          "id": "thumbnail",
          "label": "Video Thumbnail"
        },
        {
          "type": "text",
          "id": "views",
          "label": "View Count",
          "default": "1.2K views",
          "info": "Example: 1.2K views"
        },
        {
          "type": "text",
          "id": "time_ago",
          "label": "Time Published",
          "default": "2 days ago",
          "info": "Example: 2 days ago"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Latest Adventures",
      "blocks": []
    }
  ]
}
{% endschema %}
