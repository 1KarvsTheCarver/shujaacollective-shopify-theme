{% comment %}
  Brand Values Section - Patagonia Style
  Compatible with Shopify Horizon Theme
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} brand-values color-{{ section.settings.color_scheme }}"
  style="
    --padding-block-start: {{ section.settings.padding_block_start }}px;
    --padding-block-end: {{ section.settings.padding_block_end }}px;
  "
>
  <div class="page-width">
    <div class="values-grid">
      {%- for block in section.blocks -%}
        <div class="value-column" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="value-icon">
              {{ block.settings.icon }}
            </div>
          {%- endif -%}
          {%- if block.settings.heading != blank -%}
            <h3 class="value-heading">{{ block.settings.heading }}</h3>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <div class="value-text">{{ block.settings.text }}</div>
          {%- endif -%}
          {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
            <a href="{{ block.settings.link_url }}" class="value-link">
              {{ block.settings.link_text }}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% stylesheet %}
  .brand-values {
    padding-block-start: var(--padding-block-start);
    padding-block-end: var(--padding-block-end);
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 60px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .value-column {
    text-align: left;
  }

  .value-icon {
    margin-bottom: 24px;
    opacity: 0.9;
  }

  .value-icon svg {
    width: 48px;
    height: 48px;
    stroke: currentColor;
  }

  .value-heading {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 16px;
    line-height: 1.3;
    color: var(--color-foreground-heading);
  }

  .value-text {
    font-size: 15px;
    line-height: 1.6;
    opacity: 0.9;
    margin-bottom: 20px;
    color: var(--color-foreground);
  }

  .value-text p {
    margin: 0;
  }

  .value-link {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    transition: opacity 0.2s;
  }

  .value-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  .value-link::after {
    content: '→';
    margin-left: 4px;
    transition: transform 0.2s;
  }

  .value-link:hover::after {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .values-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
  }

  @media (max-width: 640px) {
    .brand-values {
      padding-inline: 20px;
    }

    .values-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .value-column {
      text-align: center;
    }

    .value-icon {
      display: flex;
      justify-content: center;
    }
  }
{% endstylesheet %}

